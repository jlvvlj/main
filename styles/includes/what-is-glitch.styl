.what-is-glitch
  height: 470px
  margin-top: 0
  figure
    position: relative
    width: 40%
    height: 350px
    margin-top: 55px
    float: left
    .witch
      max-width: 100%
      max-height: 100%
      &.large
        display: none
    .overlay-container
      min-width: 145px
    .video
      cursor: pointer
      .play-button
        vertical-align: -4px
        margin-right: 5px  
        height: 17px
        
  .callouts
    width: 45%
    float: left
    display: inline
    .callout
      position: relative
      &.discover
        .title
          background: #B8AFFF
        .window
          top: 90px
          left: 50px
        .badge
          top: 25px
          right: 90px
      &.remix
        .title
          background: #9FD6FF
        .badge
          top: 200px
          right: -65px
        .window
          top: 195px
          right: 25px
      &.collaborate
        .title
          background: #FCF3B0
        .badge
          top: 380px
          right: 125px
        .window
          top: 300px
      .badge
        position: absolute
        z-index: 1
      .window
        position: absolute
        width: 300px
        .title
          position: relative
          margin: 0
          padding: 10px 15px
          border: 2px solid black
          border-top-right-radius: 5px
          border-top-left-radius: 5px
          font-weight: 600
          .dots
            position: absolute
            right: 11px 
            top: 11px
            .dot
              width: 15px
              height: 15px
              border-radius: 10px
              border: 2px solid tertiary
              float: right
              margin: 2px 1px 0px
              &.green
                background: #05D458
              &.yellow
                background: #FCF3B0
              &.red
                background: #FF5F5F
            
        .description
          background: white
          padding: 15px 15px 25px
          border-left: 2px solid black
          border-bottom: 2px solid black
          border-right: 2px solid black
          border-bottom-left-radius: 5px
          border-bottom-right-radius: 5px

// > 1080px
// Callouts located on right, irregularly stacked; large witch visible
@media (min-width: hugeViewport)
  .what-is-glitch
    figure
      width: 48%
      margin: 55px 0
      .witch
        &.small
          display: none
        &.large
          display: block
          width: 100%
      .overlay-container
        position: absolute
        top: 250px
        left: 55%
    .callouts
      float: left     

// 1080px
// Callouts located on right of page; small witch visible
@media (max-width: hugeViewport)
  .what-is-glitch
    figure
      width: 45%
      margin-top: 0
      .witch
        &.small
          width: 93%
    .callouts
      margin-right: 2vw
      display: flex
      flex-direction: column
      width: 40%
      .callout
        display: flex
        flex-direction: row-reverse
        margin: 1em 0
        .badge
          position: initial
          margin-left: -20px
        .window
          position: initial

// 900px
// Callouts located on right of page, stacked; small witch visible
@media (max-width: largeViewport)
  .what-is-glitch
    height: 850px
    figure
      width: 95%
      height: 50vw
      .witch
        &.small
          display: none
        &.large
          display: block
          width: 95%
      .overlay-container
        position: absolute
        top: 70%
        left: 55%
    .callouts
      width: 96%
      margin-left: 1em
      .callout
        margin: 1em 0em -1em
        .badge
          position: initial
          float: right
          margin-left: -20px
          margin-top: 2.5%
        .window
          position: initial
          width: 100%

// 670px
// Callouts should be stacked, large witch visible
@media(max-width: mediumViewport)
  .what-is-glitch
    figure
      margin-top: 1em
      width: 90%
      .witch
        &.small
          display: none
        &.large 
          display: block
      .overlay-container
        margin: 1em 1em 0em 0em
    .callouts
      float: left
      margin-bottom: 2em
      .callout
        display: flex
        flex-direction: row-reverse
        margin: 1em 0 0
        .window
          margin: 1em 0em 0em 0em
          .title
            z-index: 0
          .badge
            margin-top: 5% 
            margin-left: -20px

// 592px
// Callouts should be stacked, large witch visible
@media(max-width: mediumSmallViewport)
  .what-is-glitch
    figure
      margin: 0
      width: 100%
      height: 70vw
      .witch
        &.small
          display: block
        &.large 
          display: none
      .overlay-container
        margin: 1em 0em 0em 0em
    .callouts
      float: left
      margin-bottom: 2em
      .callout
        display: flex
        flex-direction: row-reverse
        margin: 1em 0 0
        .window
          .title
            z-index: -0
          .badge
            margin-top: 8% 
            margin-left: -20px
        

// 414px
// Callouts should be stacked, small witch visible
@media(max-width: smallViewport)
  .what-is-glitch
    height: auto
    figure
      margin-top: 0px
      height: 74vw
      .witch
        &.small
          display: block
          width: 100%
        &.large
          display: none
      .overlay-container
        margin: 1em 0
    .callouts
      float: left
      margin-bottom: 2em
      .callout
        display: flex
        flex-direction: row-reverse
        .window
          .title
            z-index: 0
          .badge
            margin-top: 5% 
            margin-left: -20px
          .description
            padding: 15px 25px 25px 15px